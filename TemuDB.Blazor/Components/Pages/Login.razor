@page "/login"
@rendermode InteractiveServer
@using TemuDB.Blazor.Services
@inject AuthService AuthService
@inject NavigationManager Navigation

<PageTitle>Anmeldung - Temu-Linksammlung</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Anmeldung</h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @errorMessage
                        </div>
                    }

                    <div class="mb-3">
                        <label for="username" class="form-label">Benutzername</label>
                        <input type="text" id="username" class="form-control" @bind="username" />
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Passwort</label>
                        <input type="password" id="password" class="form-control" @bind="password" />
                    </div>

                    <div class="d-grid">
                        <button type="button" class="btn btn-primary" disabled="@isLoading" @onclick="HandleLogin">
                            @if (isLoading)
                            {
                                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                <span>Anmelden...</span>
                            }
                            else
                            {
                                <span>Anmelden</span>
                            }
                        </button>
                    </div>

                    <div class="text-center mt-3">
                        <a href="/register" class="btn btn-link">Noch kein Konto? Registrieren</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string username = string.Empty;
    private string password = string.Empty;
    private string? errorMessage;
    private bool isLoading = false;

    private async Task HandleLogin()
    {
        Console.WriteLine($"Login attempt - Username: '{username}', Password: '{password}'");

        isLoading = true;
        errorMessage = null;
        StateHasChanged();

        try
        {
            var result = await AuthService.LoginAsync(username, password);

            if (result?.Success == true)
            {
                Navigation.NavigateTo("/", forceLoad: true);
            }
            else
            {
                errorMessage = result?.Message ?? "Anmeldung fehlgeschlagen";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Ein Fehler ist aufgetreten: " + ex.Message;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }
}
